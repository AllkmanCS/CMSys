@using CMSys.UI.ViewModels
@model CoursesViewModel
@{
    ViewData["Title"] = "Courses Page";
}
<div class="w3-container">
<h3>Courses</h3>
<div class="w3-show-inline-block w3-border w3-round">
    <div class="w3-bar w3-white w3-border w3-round">
        @if (Model.CanPrevious)
        {
            <a href="/courses/index/?@Model.PreviousPageNumber" class="w3-button">&laquo;</a>
        }
        @foreach (var item in Model.Pagination)
        {
            <a href="/courses/index/?@item" class="w3-button">@item</a>  
        }
        @if(Model.CanNext)
            {
                <a href="/courses/index/?@Model.NextPageNumber" class="w3-button">&raquo</a>
            }
        </div>

        <form asp-controller="Course" asp-action="FilterByTypes">
            <select asp-for="CourseViewModel.Id" asp-items="@Model.CourseTypes" class="w3-padding">
                <option>Select Course Type</option>
            </select>
                <input type="submit" value="Submit" />
        </form>
        <form asp-controller="Course" asp-action="FilterByGroups">
            <select asp-for="CourseViewModel.Id" asp-items="@Model.CourseGroups" class="w3-padding">
                <option>Select Course Group</option>
            </select>
            <input type="submit" value="Submit" />
        </form>

        @*<select asp-items="Model.CourseTypes" class="w3-padding" id="courseType" onchange=""></select>*@
        <ul class="w3-ul">
            @foreach (var course in Model.Items)
            {
                <li class="w3-white w3-margin-top w3-border w3-round">
                    <h4>@course.Name</h4>
                    <div class="w3-bar">
                        <button class="w3-button w3-small w3-round-large w3-green">@course.CourseTypeName</button>
                        <button class="w3-button w3-small w3-round-large w3-grey">@course.CourseGroupName</button>
                    </div>
                    <h5>@course.Description</h5>
                    <a href="/courses/@course.Id" class="w3-text-blue">More info...</a>
                </li>
            }
        </ul>
</div>

</div>

